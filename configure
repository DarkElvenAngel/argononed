DISTRO=$(awk -F"=" '$1=="ID"{print $2}' /etc/os-release)

I2CHELPER=0
INITSYS="SYSTEMD"
BOOTLOC="/boot"
echo -ne "Distro check [$DISTRO]\t"
case $DISTRO in
"raspbian")
    echo "OK"
    #INITSYS="SYSTEMD"
    #BOOTLOC="/boot"
    ;;
"gentoo")
    echo "OK"
    INITSYS="OPENRC"
    #BOOTLOC="/boot"
    ;;
"manjaro-arm")
    echo "OK"
    I2CHELPER=1
    ;;
"ubuntu")
    echo "WARN - UNTESTED"
    #INITSYS="SYSTEMD"
    BOOTLOC="/boot/firmware"
    ;;
*)
    echo "WARNING: UNKNOWN DISTRO, The installer may not work";;
esac


echo "SYSTEM CHECK"
echo -n "gcc : "
command -v gcc &> /dev/null && GCC=1 || GCC=0
[[ $GCC == 1 ]] && echo "OK" || echo "ERR"
echo -n "dtc : "
command -v dtc &> /dev/null && DTC=1 || DTC=0
[[ $DTC == 1 ]] && echo "OK" || echo "ERR"
echo -n "make : "
command -v make &> /dev/null && MAKE=1 || MAKE=0
[[ $MAKE == 1 ]] && echo "OK" || echo "ERR"

if [[ $GCC -eq 1 && $DTC -eq 1 && $MAKE -eq 1 ]]
then
    echo "Dependency Check Successful" 
else    
    echo "Dependency Check Failed! Please install the missing tool(s)"
    exit 1
fi

echo "# DO NOT EDIT THIS FILE BY HAND PLEASE RUN ./configure" > makefile.conf
echo "DISTRO=${DISTRO}" >> makefile.conf
echo "BOOTLOC=${BOOTLOC}" >> makefile.conf
echo "INITSYS=${INITSYS}" >> makefile.conf
echo "I2CHELPER=${I2CHELPER}" >> makefile.conf

exit 0