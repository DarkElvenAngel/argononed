[[ -a makefile.conf ]] && { echo -e "\e[31mERROR\e[0;1m:  makefile.conf already exists. run make mrproper first!\e[0m"; exit 1;}
[[ -d build ]] || mkdir build
echo -e "\e[1;37mARGON ONE DAEMON CONFIGURING ...\e[0m"
if [[ -n $TARGET_DISTRO ]]
then
    DISTRO=$TARGET_DISTRO
else
    DISTRO=$(awk -F"=" '$1=="ID"{print $2}' /etc/os-release | sed 's/\"//g')
fi
STATUS=UNKNOWN
I2CHELPER=0
PACKAGESYS=0
INITSYS="SYSTEMD"
[[ ! -n $BOOTLOC ]] && BOOTLOC="/boot"
echo -ne "\e[1mDistro check [$DISTRO] : \e[0m"
if [[ -d "OS/$DISTRO" ]] 
then 
    [[ -f "OS/$DISTRO/OS.conf" ]] && source OS/$DISTRO/OS.conf
    case $STATUS in
    "OK")
        COLOUR=32
        ;;
    "EXPERIMENTAL")
        COLOUR="1;33"
        ;;
    *)
        COLOUR=31
        ;;
    esac
    echo -e "\e[0;${COLOUR}m${STATUS}\e[0m" 
else
    echo -e "\e[1;33mWARNING: UNKNOWN DISTRO, The installer may not work\e[0m"
fi

echo -e "\e[1mSYSTEM CHECK\e[0m"
echo -n "gcc : "
command -v gcc &> /dev/null && GCC=1 || GCC=0
[[ $GCC == 1 ]] && echo -e "\e[32mOK\e[0m" || echo -e "\e[31mERR\e[0m"
echo -n "dtc : "
command -v dtc &> /dev/null && DTC=1 || DTC=0
[[ $DTC == 1 ]] && echo -e "\e[32mOK\e[0m" || echo -e "\e[31mERR\e[0m"
echo -n "make : "
command -v make &> /dev/null && MAKE=1 || MAKE=0
[[ $MAKE == 1 ]] && echo -e "\e[32mOK\e[0m" || echo -e "\e[31mERR\e[0m"
if [[ $PACKAGESYS == 1 ]]
then
    I2CBUS=1
else
    echo -n "I2C Bus check : "
    [[ -a /dev/i2c-1 ]] && { I2CBUS=1 ; echo -e "\e[32mENABLED\e[0m";} || { I2CBUS=0 ; echo -e "\e[1mNOT ENABLED\e[0m";}
    echo -e "\e[1;37mCHECKING OPTIONAL SYSTEMS\e[0m"
    echo -n "bash-autocomplete : "
    [[ -d /etc/bash_completion.d ]] && { AUTOC=1 ; echo -e "\e[32mOK\e[0m";} || { AUTOC=0 ; echo -e "\e[1mNOT INSTALLED\e[0m";}
    echo -n "logrotate : "
    command -v logrotate  &> /dev/null && LOGROTATE=1 || LOGROTATE=0
    [[ $LOGROTATE == 1 ]] && echo -e "\e[32mINSTALLED\e[0m" || echo -e "\e[1mNOT INSTALLED\e[0m"
fi
echo -ne "\e[1mDependency Check :\e[0m"
if [[ $GCC -eq 1 && $DTC -eq 1 && $MAKE -eq 1 ]]
then
    echo -e "\e[32m Successful\e[0m" 
else    
    echo -e "\e[31m Failed! Please install the missing tool(s)\e[0m"
    exit 1
fi

echo "# DO NOT EDIT THIS FILE BY HAND PLEASE RUN ./configure" > makefile.conf
echo "CONFIGURED=1" >> makefile.conf
echo "DISTRO=${DISTRO}" >> makefile.conf
echo "BOOTLOC=${BOOTLOC}" >> makefile.conf
echo "INITSYS=${INITSYS}" >> makefile.conf
echo "I2CHELPER=${I2CHELPER}" >> makefile.conf
if [[ $PACKAGESYS == 1 ]]
then
    echo "PACKAGESYS=ENABLED" >> makefile.conf
else
    echo "AUTOCOMP=${AUTOC}" >> makefile.conf
    echo "I2CBUS=${I2CBUS}" >> makefile.conf
    echo "LOGROTATE=${LOGROTATE}" >> makefile.conf
fi
if [[ -n $DISABLE_POWERBUTTON ]]
then
    echo -e "Power Button is \e[1mDISABLED\e[0m"
    echo "DISABLE_POWER_BUTTON_SUPPORT=1" >> makefile.conf
fi
if [[ -n $USE_SYSFS_TEMP ]]
then
    echo -e "Daemon will use \e[1m${USE_SYSFS_TEMP}\e[0m for temperature sensor"
    echo "USE_SYSFS_TEMP=${USE_SYSFS_TEMP}" >> makefile.conf
fi
if [[ -n $RUN_IN_FOREGROUND ]]
then
    echo -e "Daemon will use run only in foreground and not fork"
    echo "RUN_IN_FOREGROUND=1" >> makefile.conf
fi
exit 0
